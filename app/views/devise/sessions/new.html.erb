<%= render 'shared/header' %>

<main class="form-signin w-50 m-auto mt-5">
  <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: "form-signin" }) do |f| %>
    <h1 class="h3 mb-3 fw-normal">ログインしてください</h1>

    <div class="form-floating">
      <%= f.email_field :email, class: "form-control", id: "floatingInput", placeholder: "name@example.com", autofocus: true, autocomplete: "email" %>
      <%= f.label :email, "メールアドレス", for: "floatingInput" %>
    </div>
    <div class="form-floating">
      <%= f.password_field :password, class: "form-control", id: "floatingPassword", placeholder: "Password", autocomplete: "current-password" %>
      <%= f.label :password, "パスワード", for: "floatingPassword" %>
    </div>

    <% if devise_mapping.rememberable? %>
      <div class="form-check text-start my-3">
        <%= f.check_box :remember_me, class: "form-check-input", id: "flexCheckDefault" %>
        <%= f.label :remember_me, "メールアドレス、パスワードを記憶", class: "form-check-label", for: "flexCheckDefault" %>
      </div>
    <% end %>

    <%= f.submit "ログイン", class: "btn btn-primary w-100 py-2" %>
  <% end %>

  <%= render "devise/shared/links" %>
</main>

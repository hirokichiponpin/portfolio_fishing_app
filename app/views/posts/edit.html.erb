<h1>Edit Post</h1>

<%= form_with(model: @post, local: true) do |form| %>
  <div>
    <%= form.label :content %>
    <%= form.text_area :content %>
  </div>

  <% if @post.images.attached? %>
    <div>
      <%= form.label :images, "Current Images" %>
      <% @post.images.each do |image| %>
        <%= image_tag image.variant(resize_to_limit: [200, 200]), alt: "Post image" %>
      <% end %>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :images, "Upload New Images (optional)" %>
    <%= form.file_field :images, multiple: true %>
  </div>

  <div>
    <%= form.submit 'Update Post' %>
  </div>
<% end %>

<%= link_to 'Back', posts_path %>

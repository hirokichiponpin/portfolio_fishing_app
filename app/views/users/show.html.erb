<%= render 'shared/header' %>

<h1>ユーザ情報</h1>

<h1>ユーザ名：<%= @user.username %></h1>

<div class="user-avatar">
  <% if @user.avatar.attached? %>
    <% variant = @user.avatar.variant(resize_to_fill: [200, 200]) %>
    <%= image_tag variant.processed %>
  <% else %>
		<%= image_tag 'kkrn_icon_user_1.png', size: "200x200" %>
  <% end %>
</div>

<p>
  <strong>説明文:</strong>
  <%= @user.description %>
</p>

<p>Email: <%= @user.email %></p>
<%= link_to "アカウント情報の編集", edit_user_registration_path %>
<%= link_to '投稿一覧に戻る', posts_path %>
